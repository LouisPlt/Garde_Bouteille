extends layout
block content
	.container
		.row
			.box
				.col-lg-12.text-center
					hr
					h3 Ajouter vos bouteilles
					hr
					if data != ""
						each val in data
							.row
								p.col-md-6	#{val.Quantite} #{val.Bouteille} de #{val.Annee} 
								script.
									number_of_bottles += #{val.Quantite};
								.col-md-3
									a.btn.btn-default(href="/compte/#{sess.login}/mesvins/#{val.ID}") Editer
								.col-md-3
									form(action="/compte/#{sess.login}/mesvins/#{val.ID}/supprimer" method="post")
										button.btn.btn-default(name="supprimer" value="supprimer") Supprimer
					else 
						p Pas de bouteilles stock√©es
					a.btn.btn-default.marg-t-20(href="/addvins/#{sess.login}/#{reservationId}") Ajouter une bouteille
					hr(style="margin-top:30px;")
					form.col-md-12(style="text-align:center", method='post', name='startReservation', action="/reservation/#{sess.login}/#{reservationId}")
							button.btn.btn-default(name="validate") Valider
						
						
